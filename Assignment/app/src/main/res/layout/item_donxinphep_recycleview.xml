<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/item_donxinphep_recycleview"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_donxinphep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="1dp"
        android:layout_marginHorizontal="16dp"
        android:clickable="true"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        android:backgroundTint="@color/sub_color"
        card_view:cardCornerRadius="10dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/card_view_donxinphep_tennhanvien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:text="Pham Nguyen Anh Tai"/>

            <TextView
                android:id="@+id/card_view_donxinphep_idnhanvien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:layout_marginEnd="35dp"
                android:text="ID: 18"/>

            <TextView
                android:id="@+id/card_view_donxinphep_thoigiannghi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#cecece"
                android:textSize="16dp"
                android:text="Thời gian xin nghỉ:\n 01-05-2021 đến 03-05-2021"/>

            <TextView
                android:id="@+id/card_view_donxinphep_iddonxinphep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="0dp"
                android:textColor="@color/white"
                android:text="Pham Nguyen Anh Tai"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>